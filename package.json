{
  "name": "stylelint-config-polymer",
  "version": "0.0.1",
  "description": "shareable stylelint config for Polymer elements",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "stylelint config",
    "polymer"
  ],
  "author": "Sergey Kulikov",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/web-padawan/stylelint-config-polymer.git"
  },
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "dependencies": {
    "stylelint-config-standard": "^16.0.0"
  },
  "devDependencies": {
    "eslint": "^3.1.1",
    "eslint-config-stylelint": "^6.0.0",
    "jest": "^18.1.0",
    "npm-run-all": "^4.0.0",
    "npmpub": "^3.0.1",
    "remark-cli": "^2.0.0",
    "remark-preset-lint-consistent": "^1.0.0",
    "remark-preset-lint-recommended": "^1.0.0",
    "stylelint": "^7.8.0"
  },
  "peerDependencies": {
    "stylelint": "^7.8.0"
  },
  "scripts": {
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail",
    "lint": "npm-run-all --parallel lint:*",
    "pretest": "npm run lint",
    "release": "npmpub",
    "test": "jest",
    "watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "stylelint"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true
  },
  "remarkConfig": {
    "presets": [
      "lint-recommended",
      "lint-consistent"
    ]
  }
}
